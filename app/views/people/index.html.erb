<% if notice %>
	<div class="alert alert-dismissible alert-success col-lg-12">
		<button type="button" class="close" data-dismiss="alert">Ã—</button>
		<%= notice %>
	</div>
<% end %>

<div class="page-header">
	<h2>People</h2>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Nickname</th>
      <th>Middle Name</th>
      <th>Last Name</th>
      <th>Suffix</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.nickname %></td>
        <td><%= person.middle_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.suffix %></td>
        <td><%= person.title %></td>
        <td><%= link_to 'Show', person, class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_person_path(person), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Person', new_person_path, class: "btn btn-primary" %>
