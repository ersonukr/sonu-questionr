<% if notice %>
	<div class="alert alert-dismissible alert-success col-lg-12">
		<button type="button" class="close" data-dismiss="alert">Ã—</button>
		<%= notice %>
	</div>
<% end %>

<div class="page-header">
  <h2>Elections</h2>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th>Office Type</th>
      <th>Special</th>
      <th>Election Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @elections.each do |election| %>
      <tr>
        <td><%= election.name %></td>
        <td><%= election.state %></td>
        <td><%= election.office_type_id %></td>
        <td><%= election.special %></td>
        <td><%= election.election_year %></td>
        <td><%= link_to 'Show', election, class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_election_path(election), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', election, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Election', new_election_path, class: "btn btn-primary" %>
