<%= form_for(@user, html: { class: "form-horizontal" }) do |f| %>
  <% if @user.errors.any? %>
		<div class="alert alert-dismissible alert-danger col-lg-12">
	  	<button type="button" class="close" data-dismiss="alert">Ã—</button>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="well bs-component col-lg-6">
	  <fieldset class="col-lg-12">
	    <legend>User</legend>
      <div class="form-group">
        <%= f.label :first_name, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">        
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :last_name, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :mobile_phone, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :mobile_phone, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :location, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :location, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :fb_uid, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :fb_uid, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :fb_token, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :fb_token, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :admin, class: "col-lg-3 control-label" %>
        <div class="col-lg-8 checkbox-left">
          <%= f.check_box :admin, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :postal_code, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :latitude, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.number_field :latitude, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :longitude, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.number_field :longitude, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :name, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :provider, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :provider, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :gender, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :gender, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :utc_offset, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :utc_offset, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :url, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :url, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :photo, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_field :photo, class: "form-control" %>
        </div>
      </div>      
	    <div class="form-group">
	      <div class="col-lg-8 col-lg-offset-3">
	  	  	<%= link_to 'Cancel', users_path, class: "btn btn-default" %>
		  	  <%= f.submit 'Save', class: "btn btn-primary" %>
		    </div>
			</div>
    </fieldset>
  </div>
<% end %>