<% if notice %>
	<div class="alert alert-dismissible alert-success col-lg-12">
		<button type="button" class="close" data-dismiss="alert">Ã—</button>
		<%= notice %>
	</div>
<% end %>

<div class="page-header">
	<h2>Venues</h2>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Street 1</th>
      <th>Street 2</th>
      <th>City</th>
      <th>State</th>
      <th>Postal Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= venue.name %></td>
        <td><%= venue.street_address1 %></td>
        <td><%= venue.street_address2 %></td>
        <td><%= venue.city %></td>
        <td><%= venue.state %></td>
        <td><%= venue.postal_code %></td>
        <td><%= link_to 'Show', venue, class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_venue_path(venue), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Venue', new_venue_path, class: "btn btn-primary" %>
