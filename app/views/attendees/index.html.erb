<% if notice %>
	<div class="alert alert-dismissible alert-success col-lg-12">
		<button type="button" class="close" data-dismiss="alert">Ã—</button>
		<%= notice %>
	</div>
<% end %>

<div class="page-header">
  <h2>Attendees</h2>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Event Day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendees.each do |attendee| %>
      <tr>
        <td><%= attendee.user_name %></td>
        <td><%= attendee.event_day_name %></td>
        <td><%= link_to 'Show', attendee, class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_attendee_path(attendee), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', attendee, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Attendee', new_attendee_path, class: "btn btn-primary" %>
