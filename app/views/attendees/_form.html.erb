<%= form_for(@attendee, html: { class: "form-horizontal" }) do |f| %>
  <% if @attendee.errors.any? %>
		<div class="alert alert-dismissible alert-danger col-lg-12">
	  	<button type="button" class="close" data-dismiss="alert">Ã—</button>
      <ul>
      <% @attendee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="well bs-component col-lg-6">
	  <fieldset>
	    <legend>Attendee</legend>	
      <div class="form-group">
        <%= f.label :user_id, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
    		<%= f.select :user_id, 
    				content_tag(:option, '-- No User --', 
    										:value => -1) + options_from_collection_for_select(User.all, 
      																																			:id, 
      																																			:desc, 
      																																			@attendee.user_id),
      																																			{}, { class: "form-control" } %>
        </div>
      </div>
      <div class="form-group">
        <label class="col-lg-3 control-label" for="attendee_event_day_id">Event Day</label>
        <div class="col-lg-8">
    		<%= f.select :event_day_id, 
    				content_tag(:option, '-- No Event Day --', 
    										:value => -1) + options_from_collection_for_select(EventDay.all, 
      																																			:id, 
      																																			:name, 
      																																			@attendee.event_day_id),
      																																			{}, { class: "form-control" } %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :notes, class: "col-lg-3 control-label" %>
        <div class="col-lg-8">
          <%= f.text_area :notes, class: "form-control" %>
        </div>
      </div>
	    <div class="form-group">
	      <div class="col-lg-8 col-lg-offset-3">
	  	  	<%= link_to 'Cancel', attendees_path, class: "btn btn-default" %>
		  	  <%= f.submit 'Save', class: "btn btn-primary" %>
		    </div>
			</div>
    </fieldset>
  </div>
<% end %>