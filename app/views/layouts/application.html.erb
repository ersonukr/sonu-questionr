    <style>
      a { color: #f39c12 }
      a:hover { color: #f39c12 !important }
      #logo { width: 150px }
      #footer-content { color: #fff; background-color: #134061; }
      div.checkbox-left { width: 70px }
      .container-fluid { max-width: 1340px !important; }
      .alert { margin-top: 21px }
      div.panel-heading { background-color: #134061 !important }
      ul.dropdown-menu li.nav-list-heading { padding-left: 10px }
      div#video-answers iframe { width: 400px; height: 224px; margin-bottom: 35px; }}                                  
      @media (max-width: 1024px) { 
        h1 { font-size: 6em !important }
        div#video-answers iframe { width: 964px; height: 539px }}                                  
      @media (max-width: 800px) {
        h1 { font-size: 4.6em !important }
        div#video-answers iframe { width: 740px; height: 414px }}                                  
      @media (max-width: 768px) {
        h1 { font-size: 4.5em !important }
        div#video-answers iframe { width: 708px; height: 396px }}                                  
      @media (max-width: 640px) { 
        h1 { font-size: 3.7em  !important }
        ul.dropdown-menu li.nav-list-heading { color: #fff }
        div#video-answers iframe { width: 580px; height: 324px }}
      @media (max-width: 600px) { 
        h1 { font-size: 3em  !important }
        div#video-answers iframe { width: 540px; height: 302px }}
      @media (max-width: 480px) { 
        h1 { font-size: 2.6em  !important }
        h2 { font-size: 1.9em  !important } 
        div#video-answers iframe { margin-left: -40px; width: 480px; height: 268px }}                                  
      @media (max-width: 360px) { 
        h1 { font-size: 2em  !important }
        div#video-answers iframe { margin-left: -40px; width: 360px; height: 201px }}                                  
      @media (max-width: 320px) { 
        h1 { font-size: 1.8em  !important }
        div#video-answers iframe { width: 320px; height: 179px }}                                  
		</style>
    
    <script type="text/javascript">
      (function() {
        if (typeof window.janrain !== 'object') window.janrain = {};
        if (typeof window.janrain.settings !== 'object') window.janrain.settings = {};

        janrain.settings.tokenUrl = '<%= Rails.application.config.janrain_token_url %>';

        function isReady() { janrain.ready = true; };
        if (document.addEventListener) {
          document.addEventListener("DOMContentLoaded", isReady, false);
        } else {
          window.attachEvent('onload', isReady);
        }


        var e = document.createElement('script');
        e.type = 'text/javascript';
        e.id = 'janrainAuthWidget';

        if (document.location.protocol === 'https:') {
          e.src = 'https://rpxnow.com/js/lib/inveera-questionr/engage.js';
        } else {
          e.src = 'http://widget-cdn.rpxnow.com/js/lib/inveera-questionr/engage.js';
        }

        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(e, s);
      })();
    <% unless @current_user.admin? %>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-62491528-1', 'auto');
      ga('send', 'pageview');
  	<% end %>
    </script>
  </head>
	<body>
